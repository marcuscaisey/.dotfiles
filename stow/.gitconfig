[core]
    pager = delta
[delta]
    navigate = true
    line-numbers = true
    syntax-theme = Catppuccin-mocha
[difftool]
    prompt = true
[diff]
    tool = nvimdiff
    colorMoved = default
[difftool "nvimdiff"]
    cmd = "nvim -d \"$LOCAL\" \"$REMOTE\""
[interactive]
    diffFilter = delta --color-only
[merge]
    conflictstyle = diff3
    tool = nvimdiff
[mergetool]
    keepBackup = false
[mergetool "nvimdiff"]
    cmd = nvim -d -c 'wincmd l' \"$LOCAL\" \"$MERGED\" \"$REMOTE\"
[oh-my-zsh]
	hide-status = 1
	hide-dirty = 1
